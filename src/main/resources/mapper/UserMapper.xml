<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.doudou.freechat.mapper.UserMapper">
    <select id="getUserInfoById" parameterType="long" resultType="com.doudou.freechat.dao.UserDao">
        SELECT * FROM user WHERE id=#{id}
    </select>

    <select id="getUserInfoByName" parameterType="String" resultType="com.doudou.freechat.dao.UserDao">
      SELECT * FROM user WHERE userName=#{userName}
    </select>

    <insert id="addUser" parameterType="com.doudou.freechat.dao.UserDao">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into user (userName, nickName, password,
        personalitySign, phoneNumber, avatar,
        email, createTime, accountStatus
        )
        values (#{userName}, #{nickName}, #{password},
        #{personalitySign}, #{phoneNumber}, #{avatar},
        #{email}, #{createTime}, #{accountStatus}
        )
    </insert>
</mapper>